      "program": "${workspaceFolder}/node_modules/jest/.bin/jest.js",
      "args": [
        "<SPEC FILE NAME HERE>",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/automation-api-tests",
      "env": {
        "TEST_ENV": "dev"
      }
    }
  ]
}