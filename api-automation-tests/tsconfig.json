{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "alwaysStrict": true
  },
  "exclude": ["./coverage"],
  "include": [
    "./commons/**/*.ts",
    "./specs/**/*.ts"
  ]
}
