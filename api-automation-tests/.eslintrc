{
  "root": true,
  "env": {
    "node": true,
    "amd": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": ["warn", 180, 1],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-var": ["error"],
    "eol-last": ["error", "always"],
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": ["warn"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "no-duplicate-imports": ["error"],
    "no-extra-semi": ["error"]
  }
}